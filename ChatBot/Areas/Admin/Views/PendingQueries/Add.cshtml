@model ChatBot.Business.Services.Models.QuestionAnswerModel
@{
    ViewBag.Title = "Update Answer";
}
<div class="chatbot">
    <h1 style="text-align:center">@ViewBag.Title</h1>
    <hr />
    @using (Html.BeginForm("Add", "PendingQueries", FormMethod.Post, new { area = "Admin", @class = "form-horizontal" }))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.NoticeBoard, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.DropDownListFor(m => m.NoticeBoardId, Model.NoticeBoards, new { @class = "col-lg-6 form-control" })
                        @Html.ValidationMessageFor(m => m.NoticeBoardId)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.Label("Question Hint 1", new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.QuestionHint1, new { @class = "form-control col-lg-9" })
                        @Html.ValidationMessageFor(m => m.QuestionHint1)
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Answer, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.Answer, new { @class = "form-control col-lg-9" })
                        @Html.ValidationMessageFor(m => m.Answer)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.File, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.File, new { @class = "form-control col-lg-9" })
                        @Html.ValidationMessageFor(m => m.File)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-6">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/add-question")
    }
</div>

