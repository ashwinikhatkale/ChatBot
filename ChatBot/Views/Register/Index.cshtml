@model ChatBot.Business.Services.Models.UserModel
@{
    ViewBag.Title = "Regitration";
}


@using (Html.BeginForm("Index", "Register", FormMethod.Post, new { area = "", @class = "form-horizontal" }))
{
    <h1 style="text-align:center" ;>Registration</h1>
    <hr />
    @Html.AntiForgeryToken()
    if (ViewBag.Success != null && ViewBag.Success)
    {
        <div class="row">
            <div class="col-lg-12 text-success">
                <span> Student registrered successfully!</span> <br />
                <span>Please go to <b>@Html.ActionLink("Login", "Index", "Login")</b> page to login using email address and password.</span> <br /><br />
            </div>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.RoleId)
            <div class="form-group">
                @Html.Label("First Name", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control col-lg-8" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Last Name", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control col-lg-8" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Contact Number", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control col-lg-8" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Address", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control col-lg-8" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Email Address", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-lg-8" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control col-lg-8", @type = "password" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Confirm Password", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6 text-left">
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control col-lg-8", @type = "password" })
                    <br /><br />
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-md-4">
                    <input id="submit" type="Submit" class="btn btn-primary" value="Register">
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script>
        $(function () {
            $('#submit').on('click', function (e) {

                if ($('#Password').val() != $('#ConfirmPassword').val()) {
                    alert('Password and Confirm Password does not match.');
                    return false;
                }

            });
        });
    </script>
}


